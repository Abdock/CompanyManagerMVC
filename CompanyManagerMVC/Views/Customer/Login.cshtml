@model CompanyManagerMVC.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Sign in</h2>

<form asp-action="Login" asp-controller="Customer" asp-antiforgery="true">
    <div class="has-validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter email</label>
            <input type="text" asp-for="Email"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input type="text" asp-for="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-dark"/>
        </div>
    </div>
</form>